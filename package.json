{
  "name": "@echoessh/sdk",
  "version": "1.1.0",
  "description": "Official SDK for Echoes - Centralized feedback platform for developers",
  "author": "Echoes",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "unpkg": "./dist/experiments.min.js",
  "jsdelivr": "./dist/experiments.min.js",
  "bin": {
    "echoes": "./dist/cli.cjs"
  },
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    },
    "./react": {
      "import": {
        "types": "./dist/react.d.ts",
        "default": "./dist/react.js"
      },
      "require": {
        "types": "./dist/react.d.cts",
        "default": "./dist/react.cjs"
      }
    },
    "./experiments/browser": "./dist/experiments.min.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "echoes",
    "feedback",
    "user-feedback",
    "bug-reports",
    "feature-requests",
    "saas",
    "sdk"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/echoes-sh/sdk.git"
  },
  "homepage": "https://github.com/echoes-sh/sdk#readme",
  "bugs": {
    "url": "https://github.com/echoes-sh/sdk/issues"
  },
  "peerDependencies": {
    "react": ">=18.0.0"
  },
  "peerDependenciesMeta": {
    "react": {
      "optional": true
    }
  },
  "dependencies": {
    "rrweb": "^2.0.0-alpha.17"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "react": "^18.2.0",
    "tsup": "^8.5.1",
    "typescript": "^5.3.0"
  }
}
